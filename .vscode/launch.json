    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for rdebug-ide",
            "type": "Ruby",
            "request": "attach",
            "remoteHost": "0.0.0.0",
            "remotePort": "41083",
            "remoteWorkspaceRoot": "${workspaceRoot}"
        },
      
        {
            "name": "Rails server",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server",
                "-b",
                "0.0.0.0",
                "-p",
                "3000"
            ]
        },
        {
            "name": "Rails Test",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "test"
            ]
        }
    ]
}